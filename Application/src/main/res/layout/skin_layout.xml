<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/skin_card"
        android:layout_width="@dimen/skin_layout_size"
        android:layout_height="@dimen/skin_layout_size"
        android:layout_margin="8dp"
        >

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <ImageView
                android:id="@+id/skin_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@drawable/black_cell" />

        <ImageView
                android:id="@+id/skin_foreground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@drawable/pawn_white" />
    </FrameLayout>
</androidx.cardview.widget.CardView>